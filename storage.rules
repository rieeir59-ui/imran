rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user-specific file uploads
    // Allow users to read and write only to their own directory.
    match /users/{userId}/uploads/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write to their own site visit uploads directory.
    match /users/{userId}/siteVisits/{siteVisitId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for property data.
 *
 * Data Structure:
 * All property data (commercial, residential, hotel, and bank branch) is nested under /users/{userId}.
 * Each property type has its own subcollection under the user:
 *   - /users/{userId}/commercialProperties/{propertyId}
 *   - /users/{userId}/residentialProperties/{propertyId}
 *   - /users/{userId}/hotelProperties/{propertyId}
 *   - /users/{userId}/bankBranches/{propertyId}
 *
 * Key Security Decisions:
 * - Only the authenticated user who owns a property can create, read, update, or delete it.
 * - Listing of property documents is restricted to the owner.
 * - These rules prioritize secure authorization based on user ID and document path. Data type and schema validation are not enforced in this prototype.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is made by an authenticated user.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId - The user ID to compare against the authenticated user's ID.
     * @returns {boolean} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the existing document.
     * @param {string} userId - The user ID of the document owner.
     * @returns {boolean} True if the user is the owner and the document exists.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces ownership for commercial properties.
     * @path /users/{userId}/commercialProperties/{propertyId}
     * @allow (create) - Authenticated user 'user_abc' can create a commercial property under /users/user_abc/commercialProperties/property_123.
     * @allow (get, update, delete) - Authenticated user 'user_abc' can get, update or delete a commercial property under /users/user_abc/commercialProperties/property_123.
     * @deny (create) - Authenticated user 'user_xyz' cannot create a commercial property under /users/user_abc/commercialProperties/property_123.
     * @deny (get, update, delete) - Authenticated user 'user_xyz' cannot get, update or delete a commercial property under /users/user_abc/commercialProperties/property_123.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/commercialProperties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for residential properties.
     * @path /users/{userId}/residentialProperties/{propertyId}
     * @allow (create) - Authenticated user 'user_abc' can create a residential property under /users/user_abc/residentialProperties/property_123.
     * @allow (get, update, delete) - Authenticated user 'user_abc' can get, update or delete a residential property under /users/user_abc/residentialProperties/property_123.
     * @deny (create) - Authenticated user 'user_xyz' cannot create a residential property under /users/user_abc/residentialProperties/property_123.
     * @deny (get, update, delete) - Authenticated user 'user_xyz' cannot get, update or delete a residential property under /users/user_abc/residentialProperties/property_123.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/residentialProperties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for hotel properties.
     * @path /users/{userId}/hotelProperties/{propertyId}
     * @allow (create) - Authenticated user 'user_abc' can create a hotel property under /users/user_abc/hotelProperties/property_123.
     * @allow (get, update, delete) - Authenticated user 'user_abc' can get, update or delete a hotel property under /users/user_abc/hotelProperties/property_123.
     * @deny (create) - Authenticated user 'user_xyz' cannot create a hotel property under /users/user_abc/hotelProperties/property_123.
     * @deny (get, update, delete) - Authenticated user 'user_xyz' cannot get, update or delete a hotel property under /users/user_abc/hotelProperties/property_123.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/hotelProperties/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces ownership for bank branch properties.
     * @path /users/{userId}/bankBranches/{propertyId}
     * @allow (create) - Authenticated user 'user_abc' can create a bank branch property under /users/user_abc/bankBranches/property_123.
     * @allow (get, update, delete) - Authenticated user 'user_abc' can get, update or delete a bank branch property under /users/user_abc/bankBranches/property_123.
     * @deny (create) - Authenticated user 'user_xyz' cannot create a bank branch property under /users/user_abc/bankBranches/property_123.
     * @deny (get, update, delete) - Authenticated user 'user_xyz' cannot get, update or delete a bank branch property under /users/user_abc/bankBranches/property_123.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/bankBranches/{propertyId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}